<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Price Filter -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price Range"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <SeekBar
        android:id="@+id/priceSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"/>

    <TextView
        android:id="@+id/priceRangeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up to $50/day"
        android:layout_marginBottom="16dp"/>

    <!-- Location Filter (Non-functional for now) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Range (km)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <SeekBar
        android:id="@+id/locationSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"/>

    <TextView
        android:id="@+id/locationRangeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up to 50 km"
        android:layout_marginBottom="16dp"/>

    <!-- Condition Filter (Non-functional for now) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tool Condition"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <SeekBar
        android:id="@+id/conditionSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"/>

    <TextView
        android:id="@+id/conditionRangeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Condition: 50%"
        android:layout_marginBottom="16dp"/>

    <!-- Search Button -->
    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:background="@drawable/fields_bg"
        android:backgroundTint="@color/blue_background"
        android:textColor="@color/black"
        android:layout_gravity="end"/>
</LinearLayout>
